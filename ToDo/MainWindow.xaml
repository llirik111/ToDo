<Window x:Class="ToDo.MainWindow"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
        xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
        xmlns:local="clr-namespace:ToDo"
        mc:Ignorable="d"
        Title="Список дел" 
        Height="450" Width="800">
    <Grid>
        <Button Content="Добавить  Задачу" 
        HorizontalAlignment="Left" 
        Margin="50,150,0,0" 
        VerticalAlignment="Top" 
        RenderTransformOrigin="0.628,0.543" Background="#FF2BBC1A" Width="120" Height="30"/>
        <Button Content="Удалить задачу" HorizontalAlignment="Left" Margin="50,200,0,0" VerticalAlignment="Top" Width="120" Height="30" Background="#FFED0101"/>
        <DatePicker HorizontalAlignment="Left" Margin="50,79,0,0" VerticalAlignment="Top" Height="30" Width="120"/>
        <TextBox HorizontalAlignment="Left" Margin="300,36,0,0" TextWrapping="Wrap" VerticalAlignment="Top" Width="300" Height="30"/>
        <ListBox d:ItemsSource="{d:SampleData ItemCount=5}" Width="400" Height="200" Margin="150,0,50,0"/>
        <Label>
            <Label Content="Выберите дату и время" Margin="35,25,0,0"/>
        </Label>

    </Grid>
</Window>
